{
  "compilerOptions": {
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@my/api": ["./packages/api/index.ts"],
      "@my/api/*": ["./packages/api/*"],
      "@my/core": ["./packages/core/src/index.ts"],
      "@my/core/*": ["./packages/core/src/*"],
      "@my/features": ["./packages/features/src/index.ts"],
      "@my/features/*": ["./packages/features/src/*"],
      "@my/ui": ["./packages/ui/src/index.tsx"],
      "@my/ui/*": ["./packages/ui/src/*"],
      "@my/config": ["./packages/config/src/index.ts"],
      "@my/config/*": ["./packages/config/src/*"]
    }
  },
  "extends": "./tsconfig.base",
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/types",
    "apps/next/out",
    "apps/next/.next",
    "apps/next/.tamagui"
  ]
}
